{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "tests/utils/*"
      ],
      "@utils": [
        "tests/utils"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@tests": [
        "tests"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@constants": [
        "constants"
      ],
      "@app/*": [
        "*"
      ],
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "playwright-report",
    "test-results"
  ]
}