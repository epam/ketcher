{
  "name": "playwright-testing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "report": "npx playwright show-report",
    "test": "npx playwright test",
    "test:debug": "npx playwright test --debug",
    "test:update": "npx playwright test --update-snapshots",
    "test:trace": "npx playwright test --trace on",
    "check:code": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "test:types": "tsc --noEmit",
    "check:lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:write": "prettier --write \"./**/*.{js,ts}\" ",
    "docker:build": "docker-compose build autotests && docker-compose run --rm autotests bash /app/test_prepare.sh",
    "docker:test": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium",
    "docker:test-popup": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium-popup --grep @chromium-popup",
    "docker:trace": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium --trace on",
    "docker:trace-popup": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium-popup --grep @chromium-popup --trace on",
    "docker:update": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium --update-snapshots",
    "docker:update-popup": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium-popup --grep @chromium-popup --update-snapshots",
    "docker:update:test": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium --update-snapshots -g",
    "docker:update:test-popup": "docker-compose run --rm autotests bash /app/test_run.sh --project=chromium-popup --grep @chromium-popup --update-snapshots -g"
  },
  "author": "Nitvex",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "eslint": "^8.44.0",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "ketcher-core": "*"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "prettier --write",
      "eslint ."
    ]
  },
  "types": "./tests/typings.d.ts"
}
