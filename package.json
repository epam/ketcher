{
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "prepare": "husky install",
    "precommit": "lint-staged --allow-empty",
    "build": "yarn workspaces foreach -ptv run build",
    "test": "yarn workspaces foreach -v run test",
    "serve:remote": "cd example && yarn serve:remote",
    "serve:standalone": "cd example && yarn serve:standalone",
    "serve": "run-p 'serve:*'"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^8.4.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-config-standard": "^4.0.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-less": "^1.0.1",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "packageManager": "yarn@3.1.0"
}
